<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityReflection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Editing banner -->
    <TextView
        android:id="@+id/editBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editing Reflection..."
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:background="#FFF3E0"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/reflectionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reflection Journal"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/editBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Prompt -->
    <TextView
        android:id="@+id/reflectionPrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Whatâ€™s been on your mind today?"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/reflectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Input -->
    <EditText
        android:id="@+id/reflectionInput"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:hint="Type your thoughts here..."
        android:gravity="top"
        android:inputType="textMultiLine"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/reflectionPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Tag Spinner -->
    <Spinner
        android:id="@+id/reflectionTagSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:entries="@array/reflection_tags"
        app:layout_constraintTop_toBottomOf="@id/reflectionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveReflectionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Reflection"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/reflectionTagSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Summary Text -->
    <TextView
        android:id="@+id/reflectionSummaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Entries: 0 | Words: 0 | No entries yet"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/saveReflectionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- History Label -->
    <TextView
        android:id="@+id/historyLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Reflections"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/reflectionSummaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reflectionHistoryRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="ifContentScrolls"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/historyLabel"
        app:layout_constraintBottom_toTopOf="@id/fabBackToMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB to Return Home -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home"
        android:contentDescription="Back to Main"
        app:backgroundTint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
